---
// Problem statement – right after hero, sets up Why Choose Us as the answer
const pains = [
	'Your website doesn’t reflect how good your business is.',
	'Visitors don’t turn into sales or inquiries.',
	'You’re not sure what to fix first.',
];
const placeholderImage = 'https://images.unsplash.com/photo-1460925895917-afdab827c52f?w=800&q=80';
---

<section class="relative py-14 sm:py-16 md:py-20 px-4 sm:px-6 lg:px-8 bg-bg overflow-hidden" aria-label="The problem we solve">
	<div class="relative max-w-5xl mx-auto">
		<div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-12 items-center">
			<!-- Copy -->
			<div class="lg:col-span-7">
				<h2 class="font-headline text-section-header font-medium text-text leading-tight mb-6">
					You’re better than your site suggests.
				</h2>
				<ul class="space-y-4 mb-6" role="list">
					{pains.map((pain) => (
						<li class="flex items-start gap-3">
							<span class="flex-shrink-0 w-6 h-6 rounded-full bg-accent/15 flex items-center justify-center mt-0.5" aria-hidden="true">
								<svg class="w-3.5 h-3.5 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
								</svg>
							</span>
							<span class="font-body text-section-subheading font-medium text-textMuted leading-snug">{pain}</span>
						</li>
					))}
				</ul>
				<p class="font-headline text-section-inner-title font-medium text-text">
					We fix that.
				</p>
			</div>
			<!-- Visual: placeholder -->
			<div class="lg:col-span-5 order-first lg:order-none">
				<div class="relative rounded-2xl overflow-hidden aspect-[4/3] sm:aspect-[3/2] bg-accentSubtle/50">
					<img
						src={placeholderImage}
						alt=""
						width={600}
						height={400}
						class="w-full h-full object-cover object-center"
						loading="lazy"
					/>
					<div class="absolute inset-0 bg-gradient-to-t from-bg/60 via-transparent to-transparent pointer-events-none" aria-hidden="true"></div>
				</div>
			</div>
		</div>
	</div>
</section>
