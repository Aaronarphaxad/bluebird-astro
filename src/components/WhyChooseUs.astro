---
// WhyChooseUs section (renamed from Features)
import { Image } from 'astro:assets';
import lighthouseImg from '@/assets/images/why-choose-us/lighthouse.webp';
import wacgImg from '@/assets/images/why-choose-us/wacg.webp';
import roiImg from '@/assets/images/why-choose-us/roi.webp';

const codeExample = `export function CTA() &#123;
  return (
    &lt;a 
      href="/contact" 
      className="btn btn-primary"
    &gt;
      Get a quote
    &lt;/a&gt;
  );
&#125;`;
---

<section class="relative py-16 sm:py-20 md:py-24 px-4 sm:px-6 lg:px-8 bg-bg overflow-hidden">
	<div class="relative max-w-4xl mx-auto">
		<!-- Section header -->
		<div class="text-center mb-10 sm:mb-12">
			<p class="font-body text-section-tiny font-medium text-textMuted mb-3">
				Why choose us
			</p>
			<h2 class="font-headline text-section-header font-medium text-text mb-1">
				Built for results, not just looks
			</h2>
			<p class="font-body text-section-subheading font-medium text-textMuted max-w-md mx-auto">
				We build websites that don't just look good—they drive results. Here's what you get when you work with Bluebird.
			</p>
		</div>

		<!-- 2x2 grid - same-size cards, image on top -->
		<div class="grid grid-cols-1 sm:grid-cols-2 gap-4 sm:gap-5 max-w-3xl mx-auto">
			<!-- Load under 2 seconds -->
			<div class="flex flex-col overflow-hidden rounded-xl bg-white border border-accent/10 shadow-md hover:shadow-lg hover:border-accent/20 transition-all duration-300">
				<div class="w-full aspect-[4/3] overflow-hidden rounded-t-xl bg-gray-50">
					<Image src={lighthouseImg} alt="Lighthouse performance report" width={800} height={600} class="w-full h-full object-cover object-center" loading="lazy" />
				</div>
				<div class="p-4 sm:p-5 flex-1 flex flex-col">
					<h3 class="font-body text-section-inner-title font-medium text-text mb-1.5">Load under 2 seconds</h3>
					<p class="font-body text-section-body font-medium text-textMuted leading-relaxed">
						Speed impacts rankings and conversions. We optimize performance so your site feels instant on mobile and desktop.
					</p>
				</div>
			</div>

			<!-- Designed to convert -->
			<div class="flex flex-col overflow-hidden rounded-xl bg-white border border-accent/10 shadow-md hover:shadow-lg hover:border-accent/20 transition-all duration-300">
				<div class="w-full aspect-[4/3] overflow-hidden rounded-t-xl bg-gray-100 flex flex-col">
					<div class="flex bg-gray-200/60 border-b border-accentSubtle/20">
						<div class="px-3 py-1.5 text-[10px] font-medium text-text bg-white border-r border-accentSubtle/20">cta.ts</div>
						<div class="px-3 py-1.5 text-[10px] font-medium text-textMuted">page.tsx</div>
					</div>
					<div class="p-3 flex-1 flex items-center">
						<pre class="text-[10px] leading-relaxed text-textMuted font-mono overflow-x-auto w-full"><code set:html={codeExample} /></pre>
					</div>
				</div>
				<div class="p-4 sm:p-5 flex-1 flex flex-col">
					<h3 class="font-body text-section-inner-title font-medium text-text mb-1.5">Designed to convert</h3>
					<p class="font-body text-section-body font-medium text-textMuted leading-relaxed">
						Clear messaging, strong calls-to-action, and intentional layouts that help visitors take the next step.
					</p>
				</div>
			</div>

			<!-- WCAG compliant -->
			<div class="flex flex-col overflow-hidden rounded-xl bg-white border border-accent/10 shadow-md hover:shadow-lg hover:border-accent/20 transition-all duration-300">
				<div class="w-full aspect-[4/3] overflow-hidden rounded-t-xl bg-gray-50">
					<Image src={wacgImg} alt="WCAG accessibility" class="w-full h-full object-cover object-center" loading="lazy" />
				</div>
				<div class="p-4 sm:p-5 flex-1 flex flex-col">
					<h3 class="font-body text-section-inner-title font-medium text-text mb-1.5">WCAG compliant</h3>
					<p class="font-body text-section-body font-medium text-textMuted leading-relaxed mb-3">
						We build with accessibility in mind—clear contrast, keyboard-friendly navigation, and semantic structure.
					</p>
					<div class="space-y-1.5">
						<div class="flex items-center gap-2">
							<div class="w-4 h-4 rounded-full bg-accentSubtle flex items-center justify-center flex-shrink-0">
								<svg class="w-2.5 h-2.5 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
								</svg>
							</div>
							<span class="text-[10px] text-textMuted">Keyboard-friendly navigation</span>
						</div>
						<div class="flex items-center gap-2">
							<div class="w-4 h-4 rounded-full bg-accentSubtle flex items-center justify-center flex-shrink-0">
								<svg class="w-2.5 h-2.5 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
								</svg>
							</div>
							<span class="text-[10px] text-textMuted">Semantic structure</span>
						</div>
						<div class="flex items-center gap-2">
							<div class="w-4 h-4 rounded-full bg-accentSubtle flex items-center justify-center flex-shrink-0">
								<svg class="w-2.5 h-2.5 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
								</svg>
							</div>
							<span class="text-[10px] text-textMuted">Clear contrast + focus states</span>
						</div>
					</div>
				</div>
			</div>

			<!-- Higher ROI -->
			<div class="flex flex-col overflow-hidden rounded-xl bg-white border border-accent/10 shadow-md hover:shadow-lg hover:border-accent/20 transition-all duration-300">
				<div class="w-full aspect-[4/3] overflow-hidden rounded-t-xl bg-gray-50">
					<Image src={roiImg} alt="ROI benefits visualization" width={800} height={600} class="w-full h-full object-cover object-center" loading="lazy" />
				</div>
				<div class="p-4 sm:p-5 flex-1 flex flex-col">
					<h3 class="font-body text-section-inner-title font-medium text-text mb-1.5">Higher ROI</h3>
					<p class="font-body text-section-body font-medium text-textMuted leading-relaxed">
						A lean setup means less overhead and more value—professional results without agency markup.
					</p>
				</div>
			</div>
		</div>
	</div>
</section>
