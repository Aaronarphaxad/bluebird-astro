---
import Layout from "../layouts/Layout.astro";
import Footer from "../components/Footer.astro";
import aboutContent from "../content/pages/about.json";

const { meta, headline, intro, mission, story, howWeWork, team, cta } = aboutContent;
const missionImage = "https://images.unsplash.com/photo-1522071820081-009f0129c71c?w=1920&q=75&auto=format&fit=crop";
---

<Layout
  title={meta.title}
  description={meta.description}
  canonicalURL="/about"
  ogImage="/og-about.jpg"
  keywords={meta.keywords}
>
  <section
    class="relative pt-28 sm:pt-32 md:pt-36 pb-20 sm:pb-24 md:pb-32 px-4 sm:px-6 lg:px-8 bg-bg overflow-hidden"
  >
    <div class="absolute top-0 right-0 w-[600px] h-[600px] bg-accent/3 rounded-full blur-3xl animate-pulse-slow"></div>
    <div class="absolute bottom-0 left-0 w-[500px] h-[500px] bg-accentSubtle/30 rounded-full blur-3xl animate-pulse-slow-delay"></div>

    <div class="relative max-w-7xl mx-auto">
      <!-- Header -->
      <header class="mb-12 sm:mb-16 md:mb-20">
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-10 items-end">
          <div class="lg:col-span-7">
            <h1 class="font-headline font-bold text-text leading-[0.9] tracking-[-0.04em] text-[clamp(4rem,12vw,7.5rem)]">
              {headline}
            </h1>
          </div>
          <div class="lg:col-span-5 lg:pb-3">
            <p class="text-sm sm:text-base md:text-lg text-textMuted leading-relaxed max-w-prose">
              {intro}
            </p>
          </div>
        </div>
      </header>

      <!-- Mission hero image -->
      <div class="mb-16 sm:mb-20 md:mb-24 relative rounded-2xl overflow-hidden">
        <div class="relative w-full h-[400px] sm:h-[500px] md:h-[600px] lg:h-[700px]">
          <img
            src={missionImage}
            alt={mission.imageAlt}
            class="w-full h-full object-cover"
            loading="eager"
            width="1920"
            height="1080"
            fetchpriority="high"
            decoding="async"
          />
          <div class="absolute inset-0 bg-black/60"></div>
          <div class="absolute inset-0 flex flex-col justify-end p-8 sm:p-12 md:p-16 lg:p-20">
            <div class="max-w-2xl">
              <h2 class="font-headline text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-bold text-white mb-4 sm:mb-6">
                {mission.heading}
              </h2>
              <p class="text-sm sm:text-base md:text-lg text-white leading-relaxed">
                {mission.body}
              </p>
            </div>
          </div>
        </div>
      </div>

      <!-- Story block -->
      <div class="mb-16 sm:mb-20 max-w-4xl">
        <h2 class="font-headline text-xl sm:text-2xl md:text-3xl font-semibold text-text mb-4 sm:mb-6">
          {story.heading}
        </h2>
        <p class="text-sm sm:text-base text-textMuted leading-relaxed">
          {story.body}
        </p>
      </div>

      <!-- How we work -->
      <div class="mb-16 sm:mb-20">
        <div class="mb-8 sm:mb-10">
          <h2 class="font-headline text-2xl sm:text-3xl font-semibold text-text mb-1">
            {howWeWork.heading}
          </h2>
          {howWeWork.subheading && (
            <p class="text-sm text-textMuted mt-1">{howWeWork.subheading}</p>
          )}
        </div>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 sm:gap-8">
          {howWeWork.points.map((point, i) => (
            <div class="bg-white rounded-2xl border border-accentSubtle/50 p-6 sm:p-8">
              <div class="w-10 h-10 rounded-xl bg-accent/10 flex items-center justify-center mb-4 text-accent font-headline font-bold text-lg">
                {i + 1}
              </div>
              <h3 class="font-headline text-lg font-semibold text-text mb-2">
                {point.title}
              </h3>
              <p class="text-sm text-textMuted leading-relaxed">
                {point.description}
              </p>
            </div>
          ))}
        </div>
      </div>

      <!-- Team -->
      <div class="mb-16 sm:mb-20">
        <h2 class="font-headline text-2xl sm:text-3xl font-semibold text-text mb-8 sm:mb-10">
          {team.heading}
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 sm:gap-8">
          {team.members.map((member) => (
            <div class="bg-white rounded-2xl border border-accentSubtle/50 p-6 sm:p-8 text-center">
              <div class="w-20 h-20 sm:w-24 sm:h-24 md:w-28 md:h-28 mx-auto mb-4 sm:mb-5 rounded-full bg-accentSubtle flex items-center justify-center overflow-hidden">
                <span class="text-2xl sm:text-3xl md:text-4xl font-bold text-accent">
                  {member.initial}
                </span>
              </div>
              <h3 class="font-headline text-base sm:text-lg font-semibold text-text mb-2">
                {member.name}
              </h3>
              <p class="text-xs sm:text-sm text-textMuted leading-relaxed">
                {member.role}
              </p>
            </div>
          ))}
        </div>
      </div>

      <!-- CTA -->
      <div class="text-center">
        <p class="text-sm text-textMuted mb-6">{cta.line}</p>
        <a
          href={cta.href}
          class="group inline-flex items-center gap-3 px-8 py-4 bg-text text-bg font-medium rounded-full text-sm hover:scale-[1.02] transition-all duration-300 focus:outline-none focus-visible:ring-2 focus-visible:ring-accent focus-visible:ring-offset-2"
        >
          <span>{cta.buttonText}</span>
          <svg
            class="w-4 h-4 transform group-hover:translate-x-1 transition-transform"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
            aria-hidden="true"
          >
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
      </div>
    </div>
  </section>

  <Footer />
</Layout>

<style>
  @keyframes pulseSlow {
    0%, 100% { opacity: 0.3; transform: scale(1); }
    50% { opacity: 0.5; transform: scale(1.1); }
  }
  .animate-pulse-slow {
    animation: pulseSlow 8s ease-in-out infinite;
  }
  .animate-pulse-slow-delay {
    animation: pulseSlow 8s ease-in-out infinite;
    animation-delay: 2s;
  }
</style>
